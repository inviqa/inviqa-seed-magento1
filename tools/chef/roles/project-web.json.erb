{
  "name": "project-web",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "<%= config.name %> web role",
  "run_list": [
    "role[project-base]",
    "role[db-mysql56-client]",
    "role[php56]",
    "role[web-nginx]",
    "role[redis30]",
    "role[memcache]",
    "recipe[config-driven-helper::capistrano]",
    "recipe[config-driven-helper::packages-additional]",
    "role[web-magento]"
  ],
  "default_attributes": {
    "magento": {
      "redis": {
        "force_standalone": "1"
      }
    },
    "packages-additional": {
      "git": "install"
    },
    "php": {
      "directives": {
        "date.timezone": "Europe/London"
      }
    }
  }
}
